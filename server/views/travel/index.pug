extends ../partials/layout

append css
  link(rel='stylesheet', type='text/css', href=`${CONTEXT_PATH}/css/travel/index.css?v=${VERSION}`)


block header
  +nav({ active: 1 ,logo:'travel'})



block content
  #app

    - var regLink = 'http://b.ziztour.com/guide/login.html';

    .banner-wrap
      .banner-img
        img(src=CDN_PATH + "/images/travel/banner.jpg")
      .title-img
        img(src=CDN_PATH + "/images/travel/title.png")
      .link-area
        a.link-button(href=regLink,target="_blank") 即刻加入 立即省钱
      ul.referral-wrap
        each val, index in referrals
          li.referral
            .referral-content
              img.referral-icon(src=CDN_PATH + "/images/travel/referral-" + (index + 1) + ".svg",alt=TITLE)
              .referral-msg
                p.preferral-text!= val.msg
                .line
            h4= val.title
    .content-wrap
      .core-function-wrap
        .core-function.global-center
          .title-img
            img(src=CDN_PATH + "/images/travel/text1.png")
          ul.travel-list
            each item, index in travelData
              li.travel-details(class={'details-last':index ===7,'details-normal':index !==7})
                h2= item.title
                .details-content
                  if item.caption
                    h3= item.caption
                  if item.msg
                    h4= item.msg
                  ul.details-list
                    each val in item.options
                      li!= val
                  if item.link
                    a.button-link(href=regLink,target="_blank") 免费注册
      .member-equity-wrap
        .member-equity.global-center
          .title-img
            img(src=CDN_PATH + "/images/travel/text2.png")
          ul.member-list
            each item, index in memberData
              li.member-details.hover-scale
                .member-img
                  if !(index-1)
                    img(src=CDN_PATH + "/images/travel/member-"+ (index+1) +".png")
                  else
                    img(src=CDN_PATH + "/images/travel/member-"+ (index+1) +".svg",alt=TITLE)
                .details-content
                  ul.details-list
                    each val in item.options
                      li= val
                  .details-bottom
                    h2=item.title
                    h3= item.msg
                    a.link-button(href=PC_TRAVEL_PATH + item.path,target="_blank")= item.text
      .member-weal-wrap
        .member-weal.global-center
          .title-img
            img(src=CDN_PATH + "/images/travel/text3.png")
          -
            var wealList = [{
                title: '免费下午茶',
                guide: '白金会员 黄金会员专享',
                msg: '60人以上企业<br>免费申请送礼上门'
              },{
              title: '香辣小龙虾',
              guide: '白金会员 黄金会员专享',
              msg: '100人以上企业<br>免费申请送礼上门<br>（人手一份）'
              },{
              title: '学车优惠',
              guide: '白金会员 黄金会员专享',
              msg: '100人以上企业<br>免费申请上门办理<br>（协议价）'
              },{
              title: '手机贴膜服务',
              guide: '白金会员 黄金会员专享',
              msg: '60人-150人以上企业<br>免费申请上门服务'
              },{
              title: '高端牙科服务',
              guide: '全部会员',
              msg: '100人以上企业<br>免费申请上门服务'
              }] ;

          ul.weal-list
            each item,index in wealList
              li.weal-details.hover-scale
                .details-content
                  img(src=CDN_PATH + "/images/travel/fl"+ (index+1) +".png")
                  .details-mask
                    h5=item.guide
                    p!=item.msg
                h3=item.title
      .serve-case-wrap
        .serve-case.global-center
