// 全局样式
@require "./partials/layout"

.substance
  background inline-url('/images/others/business/main-bg.svg') no-repeat center 140px
  height 700px
  .wrapper
    padding 188px 45px 0 45px
    .item
      box-shadow: 0 0 6px 0 rgba(0,0,0,0.07)
      padding-left 38px
      padding-top 47px
      width 360px - @padding-left
      height 280px - @padding-top
      margin 0 auto

      h2
        font-size: 22px;
        color: #000000;
        height 30px
        line-height @height
      p
        height 22px
        line-height @height
        font-size: 16px
        color: #787878
        margin-top 4px
      ul
        margin-top 22px
        font-size: 14px;
        color: #999999
        li
          height 30px
          label
            display: inline-block
            min-width: 74px

      .underline
        margin 15px 0 0 0
        width 67px

